{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Market Tick Data Schema",
  "description": "Schema for market tick data used in ACD analysis",
  "type": "object",
  "properties": {
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the market tick"
    },
    "symbol": {
      "type": "string",
      "description": "Trading symbol or identifier"
    },
    "price": {
      "type": "number",
      "minimum": 0,
      "description": "Price of the security"
    },
    "volume": {
      "type": "number",
      "minimum": 0,
      "description": "Trading volume"
    },
    "bid_price": {
      "type": "number",
      "minimum": 0,
      "description": "Best bid price"
    },
    "ask_price": {
      "type": "number",
      "minimum": 0,
      "description": "Best ask price"
    },
    "bid_size": {
      "type": "number",
      "minimum": 0,
      "description": "Best bid size"
    },
    "ask_size": {
      "type": "number",
      "minimum": 0,
      "description": "Best ask size"
    },
    "exchange": {
      "type": "string",
      "description": "Exchange identifier"
    },
    "source": {
      "type": "string",
      "enum": ["client", "independent", "regulatory"],
      "description": "Data source type"
    },
    "quality_score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Data quality score (0-1)"
    }
  },
  "required": ["timestamp", "symbol", "price"],
  "additionalProperties": false
}
